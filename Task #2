#include <stdio.h>

int main()
{
int binary,decimal,left_shift=0;
printf("Enter number in binary: ");
scanf("%d",&binary);

while(binary>0)
    {
    decimal=decimal+(binary%10<<left_shift);//ответ = предыдущее значение десятичного + (остаток двоичного / 10 без остатка и используем сдвиг влево)
    left_shift++;//увеличиваем сдвиг влево
    binary = binary/10;//убираем крйнюю цифру в двоичном числе + служит счетчиком для выхода из цикла
    }

printf("In decimal it will be: %d",decimal);

return 0;
}
